---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'About Me';

const identity = {
  firstName: 'Michael',
  lastName: 'Houmann',
  country: 'Denmark',
  occupation: 'Freelance Developer',
  hobbies: ['photography', 'travel', 'reading', 'writing', 'programming'],
};

const skills = [
  'HTML',
  'CSS',
  'Javascript',
  'React',
  'Astro',
  'Python',
  'PHP',
  'SQL',
  'NoSQL',
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = 'navy';
const fontWeight = 'bold';
const textCase = 'uppercase';
---

<BaseLayout pageTitle={pageTitle}>
  <h2>...and my new Astro site!</h2>

  <p>
    I am working through Astro's introductory tutorian. This is the second page
    on my website and the first I built myself.
  </p>

  <p>
    This site will update when I complete more of the tutorial, so keep checking
    back, and see how my journey is going.
  </p>

  {happy && <p>I am happy to be learning Astro.</p>}

  {finished && <p>I finished this tutorial.</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }

  <p>Here are a few fun facts about me:</p>
  <ul>
    <li>My name is {identity.firstName} {identity.lastName}</li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
        </li>
      )
    }
  </ul>

  <p>My skills are:</p>

  <ul>
    {skills.map(skill => <li class='skill'>{skill}</li>)}
  </ul>

  <style define:vars={{ skillColor, fontWeight, textCase }}>
    h1 {
      color: purple;
      font-size: 4rem;
    }

    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
</BaseLayout>
